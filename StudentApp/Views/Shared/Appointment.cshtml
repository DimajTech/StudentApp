<section id="myAppointments-appointment" style="margin: 80px">
    <div class="w3-container-appointment">
        <div class="row">
            <div>
                <h2>Mis citas</h2>
            </div>

            <div class="col-md-12 col-sm-12">

                <div class="table-responsive-general">

                    <table class="w3-table-all-general" id="myappointments-table">

                        <thead>

                            <tr class="w3-black">

                                <th>
                                    Fecha
                                </th>
                                <th>
                                    Hora
                                </th>
                                <th>
                                    Modo
                                </th>
                                <th>
                                    Estado
                                </th>
                                <th>
                                    Curso
                                </th>
                                <th>
                                    Comentario del profesor
                                </th>
                            </tr>

                        </thead>

                        <tbody id="myappointments-tbody">
                        </tbody>

                    </table>
                    <p id="noAppointmentsMessage" style="display: none;">No se encontraron citas registradas</p>
                </div>
            </div>

        </div>
    </div>
</section>
<section class="section-appointment">
    <form class="form-appointment">
        <h2 class="h2-appointment">Agendar Hora Consulta</h2>
        <div>
            <label class="label-appointment" for="course">
                Curso:
            </label>
            <select id="course" class="select-appointment" style="width:100%;">
            </select>
        </div>


        <div>
            <label class="label-appointment">Fecha:</label>
            <input type="date" id="datetime" class="input-appointment" />
        </div>

        <div>
            <label class="label-appointment">Hora:</label>
            <select id="time" style="width:100%;" class="input-appointment" size="1">
            </select>

        </div>

        <div>
            <label class="label-appointment">Modalidad</label>
            <select id="mode" style="width:100%;" class="input-appointment">
                <option value="1">Virtual</option>
                <option value="2">Presencial</option>
            </select>
        </div>
        <button type="button" class="general-button-green" onclick="AddAppointment()">Registrar</button>
        <button type="reset" class="general-button-red">Cancelar</button>

    </form>
</section>


