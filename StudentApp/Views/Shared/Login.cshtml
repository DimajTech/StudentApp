@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="contact-us section" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-6  align-self-center">
                <div class="section-heading">
                    <h6>Iniciar Sesión</h6>
                    <h2>Accede a tu cuenta</h2>
                    <p>Ingresa para ver las últimas noticias, solicitar horas de consulta y acceder a la información de tus cursos.</p>

                </div>
                <img src="/images/firma-promocional-con-texto-negro.png" alt="Black University Logo" style="height:auto;" />

            </div>
            <div class="col-lg-6">
                <div class="contact-us-content">
                    <form id="contact-form" method="post">
                        <div class="row">

                            <div class="col-lg-12">
                                <fieldset>
                                    <input type="email" name="email" id="email" placeholder="Ingrese su correo..." required>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <input type="password" name="password" id="password" placeholder="Ingrese su contraseña..." required>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="orange-button">Ingresar</button>
                                </fieldset>
                            </div>
                        </div>
                        <br />
                        <label id="validation"></label>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


