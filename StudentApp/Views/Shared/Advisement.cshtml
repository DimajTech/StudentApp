

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/templatemo-scholar.css">



<section class="section-advisements" id="advisements">
    <div class="container">
        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-success" onclick="ShowCreateAdvisementForm()">+ Crear nueva consulta</button>
        </div>

        <h3>Mis consultas</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Curso</th>
                    <th>Estudiante</th>
                    <th>Fecha</th>
                    <th>Detalle</th>
                </tr>
            </thead>
            <tbody id="user-advisements">
                <!-- Datos dinámicos de consultas de usuarios -->
            </tbody>
        </table>

        <h3>Todas las consultas</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Curso</th>
                    <th>Estudiante</th>
                    <th>Fecha</th>
                    <th>Detalle</th>
                </tr>
            </thead>
            <tbody id="public-advisements">
                <!-- Datos dinámicos de consultas públicas -->
            </tbody>
        </table>
    </div>
</section>


<!-- Sección para detalles de consulta, permanece oculta-->


<section class="section-advisement-details" style="display: none;" id="advisement-details">
    <div class="container">
        
        <h2 class="text-center">Detalles de consulta</h2>

        <div class="mb-3">
            <label for="course" class="form-label"><strong>Curso:</strong></label>
            <input type="text" class="form-control" id="course" placeholder="Enter the course name">
        </div>

        <div class="mb-3">
            <label for="author" class="form-label"><strong>Author:</strong></label>
            <input type="text" class="form-control" id="author" placeholder="Enter the student's name">
        </div>

        <div class="mb-3">
            <label for="content" class="form-label"><strong>Consultation Text:</strong></label>
            <textarea class="form-control" id="content" rows="4" placeholder="Enter the consultation content"></textarea>
        </div>

        <!-- Falta la parte de los comentarios  -->
    </div>
</section>



<!-- Sección para crear consulta, permanece oculta -->

<section id="create-advisement" style="display: none; margin: 80px;">
    <div class="w3-container w3-card w3-padding">
        <div class="row">
            <div class="section-title-create-advisement text-center mb-4">
                <h2>Crear consulta</h2>
            </div>

            <form class="form-advisement">
                <!-- Selección de Curso -->
                <div class="mb-3">
                    <label for="course" class="form-label">Curso:</label>
                    <select id="advisement-course-select" class="form-select">
                        <option value="0" selected>Seleccione un curso</option>
                        <!-- Opciones se cargarán dinámicamente desde AJAX -->
                    </select>
                </div>

                <!-- Mensaje -->
                <div class="mb-3">
                    <label for="advisement-content" class="form-label">Mensaje:</label>
                    <textarea id="advisement-content" class="form-control" rows="4" placeholder="Escribe tu consulta aquí..."></textarea>
                </div>

                <!-- Checkbox para consulta pública -->
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="publicCheck">
                    <label class="form-check-label" for="publicCheck">Consulta pública</label>
                </div>

                <!-- Botones -->
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-primary w-50" onclick="AddAdvisement()">Enviar</button>
                    <button type="reset" class="btn btn-secondary w-50" onclick="CancelCreateAdvisement()">Cancelar</button>
                </div>
            </form>
        </div>
    </div>

</section>
